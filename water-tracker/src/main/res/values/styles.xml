<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlActivated">@color/ocean_blue</item>
    <item name="android:textColor">@color/white</item>

    <item name="android:windowBackground">@color/blue_whale</item>
  </style>

  <style name="Divider">
    <item name="android:layout_height">0.75dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginTop">@dimen/vertical_margin</item>
    <item name="android:background">@color/grey</item>
  </style>

  <style name="Main" />

  <style name="Main.Title">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
    <item name="android:layout_marginTop">@dimen/vertical_margin</item>
    <item name="layout_constraintStart_toStartOf">parent</item>
  </style>

  <style name="Main.SectionTitle" parent="Main.Title">
    <item name="android:textColor">@color/grey</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="Main.ItemTitle" parent="Main.Title">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="Main.ItemValue">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
    <item name="android:textColor">@color/ocean_blue</item>
    <item name="layout_constraintEnd_toEndOf">parent</item>
    <item name="layout_constraintHorizontal_bias">1</item>
  </style>

</resources>
